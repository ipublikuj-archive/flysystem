local:
	class	: League\Flysystem\Adapter\Local
	factory	: IPub\Flysystem\Factories\Adapters\LocalFactory::create
	parameters:
		directory:
			type		: string
			required	: TRUE
		writeFlags:
			type		: integer
			required	: FALSE
			default		: 2
		linkHandling:
			type		: string
			required	: FALSE
			default		: disallowLinks
			values		: [skipLinks, disallowLinks]

azure:
	class	: League\Flysystem\Azure\AzureAdapter
	factory	: IPub\Flysystem\Factories\Adapters\AzureFactory::create
	parameters:
		client:
			type		: string
			required	: TRUE
		container:
			type		: string
			required	: TRUE
		prefix:
			type		: string
			required	: FALSE
			default		: NULL

