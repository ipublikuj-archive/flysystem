ftp:
	class	: League\Flysystem\Adapter\Ftp
	factory	: IPub\Flysystem\Factories\Adapters\FtpFactory::create
	parameters:
		host:
			type		: string
			required	: TRUE
		username:
			type		: string
			required	: FALSE
		password:
			type		: string
			required	: FALSE
		port:
			type		: integer
			required	: FALSE
			default		: 21
		root:
			type		: string
			required	: FALSE
			default		: NULL
		passive:
			type		: bool
			required	: FALSE
			default		: TRUE
		ssl:
			type		: bool
			required	: FALSE
			default		: TRUE
		timeout:
			type		: integer
			required	: FALSE
			default		: 30

